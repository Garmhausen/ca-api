enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiration: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  clients: [Client!]!
}

type Client {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  email: String
  phone: String
  address1: String
  address2: String
  address3: String
  city: String
  postalCode: String
  stateProvince: String
  notes: String
  user: User!
}
